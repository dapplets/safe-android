<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_review_message_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey_two"
    android:orientation="vertical">

    <View
        android:id="@+id/signature_request_details_toolbar_bkg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/signature_request_details_toolbar_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/signature_request_details_toolbar_title" />

    <ImageView
        android:id="@+id/signature_request_details_back_btn"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/selectable_circle_background"
        android:padding="16dp"
        android:tint="@color/dark_slate_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_24dp" />

    <TextView
        android:id="@+id/signature_request_details_toolbar_title"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/toolbar_height"
        android:paddingEnd="16dp"
        android:text="@string/message"
        android:textColor="@color/dark_slate_blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/signature_request_details_back_btn"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/signature_request_details_domain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:text="@string/domain"
        android:textColor="@color/dark_slate_blue"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signature_request_details_back_btn" />

    <TextView
        android:id="@+id/signature_request_details_domain_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/battleship_grey"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signature_request_details_domain_title"
        tools:text="domain: {
        name: &apos;CryptoKitties&apos;,
        version: &apos;1&apos;,
        chainId: 1,
        verifyingContract: &apos;0xcdCCccccCCCCcCCCCCCcCcCccCcCCCcCccccd282&apos;,
    }," />


    <TextView
        android:id="@+id/signature_request_details_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:text="@string/message"
        android:textColor="@color/dark_slate_blue"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signature_request_details_domain_label" />


    <TextView
        android:id="@+id/signature_request_details_message_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/battleship_grey"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signature_request_details_message_title"
        tools:text="message: {
        from: {
            name: &apos;Cow&apos;,
            wallet: &apos;0xCD2a3d9F938E13CD947Ec05AbC7FE734Df8DD826&apos;,
        },
        to: {
            name: &apos;Bob&apos;,
            wallet: &apos;0xbBbBBBBbbBBBbbbBbbBbbbbBBbBbbbbBbBbbBBbB&apos;,
        },
        contents: &apos;Hello, Bob!&apos;,
    }," />

</androidx.constraintlayout.widget.ConstraintLayout>
