<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/layout_collect_message_signatures_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Waiting for signatures (N required)"
            android:textColor="@color/black_alpha_70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Received:"
            android:textColor="@color/black_alpha_70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_collect_message_signatures_required" />

        <TextView
            android:id="@+id/layout_collect_message_signatures_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azure"
            android:textSize="32sp"
            tools:text="3" />

        <TextView
            android:id="@+id/layout_collect_message_signatures_request_button"
            style="@style/PrimaryButton.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Request signatures" />

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/layout_collect_message_signatures_request_refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/layout_collect_message_signatures_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:textColor="@color/black_alpha_70"
            android:visibility="gone"
            tools:text="0x123456789"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/layout_collect_message_signatures_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_share_24dp"
            tools:visibility="visible" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
